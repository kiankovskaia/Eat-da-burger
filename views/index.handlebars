<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img width="300px" src="https://media.istockphoto.com/vectors/burger-with-crown-logo-illustration-vector-id1004591262?b=1&k=6&m=1004591262&s=612x612&w=0&h=jRYqO_0-aP30ZJxAvc48mQnRgLwfVIxT1sZniPRujLI=" class="burger-image" alt="Burger" />
            <h1 style="color:black; text-align: center">Eat-Da-Burger</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <h2 style="color:black">Time To Eat!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-6 text-center">

            <h2 style="color:black">Was It Good?</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
        <h2 style="color:black"> Add New Burger </h2>
        <form class="create-form">

            <div class="form-group">
                <label style="color:cornsilk" for="bn">Burger Name:</label>
                <input type="text" id="bn" name="name">
            </div>

            <div style="color: black" class="form-group">
                <label style="color:black" for="devour"> Please select:</label><br>
                <input style="color:black" type="radio" name="devoured" value="0"> Haven't tried this one yet <br>
                <input style="color:black" type="radio" name="devoured" value="1"> I've already tried this one <br>
            </div>

            <button type="submit"> Select Da' Burger </button>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>