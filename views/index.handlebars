<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img width="300px" style="border-radius: 50px; margin-top:30px" src="https://image.freepik.com/free-vector/burger-illustration_9845-5.jpg" class="burger-image" alt="Burger"/>
            <h1 style="color:black; text-align: center">Eat-Da-Burger</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <h2>Time To Eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 text-center">

            <h2>Did you like it?</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
        <h2 style="color:black">Add New Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label style="color:black" for="bn">Enter new Burger:</label>
                <input type="text" id="bn" name="name"> <button class="btnstyle" type="submit"> Create! </button>
            </div>
           
        </form>
    </div>
    <div class="col-md-2"></div>
</div>